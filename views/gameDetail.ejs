<div class="gameDetailContainer">
  <div class="title"><%= title %></div>
  <div class="gameDetailCard">
    <div class="imgWrapper">
      <img
        src="data:image/<%=game.img.contentType%>;base64,
                    <%=game.img.data.toString('base64')%>"
        alt=""
      />
    </div>
    <div class="mainInfoWrapper">
      <div class="titleDescription">
        <div class="titlegame"><%= game.title%></div>
        <div class="descriptionGame">Description: <%= game.description%></div>
      </div>
      <div class="genresStoresDevPrice">
        <div class="genresStoresDevs">
          <div class="devs">Developer: <%= game.developer?.name || ''%></div>
          <div class="genres">
            Genres: <%for (const genre of game.genre){%> <%= genre.name%> <%}%>
          </div>
          <div class="storoes">
            Where to buy: <%for (const store of game.store){%> <%= store.name%>
            <%}%>
          </div>
        </div>
        <div class="price"><%= game.price%>â‚´</div>
      </div>
    </div>
  </div>
  <div class="buttonsContainer">
    <a class="button" href="<%= game.url+'/delete'%>">Delete game</a>
    <a class="button" href="<%= game.url+'/update'%>">Update game</a>
  </div>
</div>
